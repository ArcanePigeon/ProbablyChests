{
  "schemaVersion": 1,
  "id": "mobscarecrow",
  "version": "${version}",

  "name": "Mob Scarecrow",
  "description": "Scary scarecrows / plushies that keeps mobs away from your home.",
  "authors": [
    "ProbabilityPigeon"
  ],
  "contact": {
    "homepage": "https://cloudwarp.org/",
    "sources": "https://github.com/ReillyGregorio/MobScarecrow.git"
  },

  "license": "CC0-1.0",
  "icon": "assets/mobscarecrow/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "org.cloudwarp.mobscarecrow.MobScarecrow"
    ],
    "client": [
      "org.cloudwarp.mobscarecrow.client.MobScarecrowClient"
    ]
  },
  "mixins": [
    "mobscarecrow.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
